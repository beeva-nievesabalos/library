//style.styl

/*
 * Import nib
 */
@import 'nib'

/*
 * Grab a custom font from Google
 */
@import url('http://fonts.googleapis.com/css?family=Quicksand')
@import url('http://fonts.googleapis.com/css?family=Rancho&effect=shadow-multiple')
@import url('http://fonts.googleapis.com/css?family=Roboto+Condensed')
@import url('http://fonts.googleapis.com/css?family=Roboto')

/*
 * Nib provides a CSS reset
 */
global-reset()

/*
 * Store the main color and
 * background color as variables
 */
main-color = #1abc9c
background-color = #ffffff
widget-color = #1abc9c

body
  font-family 'Roboto'
  background-color background-color
  font-size 16px
  color #444

a
  text-decoration none
  outline none

a:hover, a:focus
  outline none


header
  font-family 'Rancho'
  /*padding 50px 10px*/
  color #fff
  font-size 50px
  text-align center

  /*
   * Note the use of the `main-color`
   * variable and the `darken` function
   */
  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

  h1
    display block
    text-align center
    width 500px
    height 140px
    margin 0 auto
    padding 20px 0px
    text-indent -10000000px
    background transparent url(/img/logo-maya-white.png) no-repeat center center

    a
      display block
      width 100%
      height 100%

.container
  width 800px
  margin 50px auto
  overflow hidden

.logo
    width 300px

.main-content
  float left
  width 500px

  p
    margin-bottom 20px
    font-size 18px

  a
    color main-color

  dt
    font-family 'Roboto Condensed'
    font-size 24px
    margin-bottom 5px

  dd
    font-family 'Roboto'
    font-size 18px
    margin-bottom 20px
    margin-left 20px

  ul
    padding-left 25px

  li
    list-style circle
    font-size 18px
    margin-bottom 2px

  h1, h2, h3
    font-family 'Roboto Condensed'
    text-transform capitalize
    margin 2px

  h1
    font-size 26px
    text-shadow 0px -1px 0px darken(main-color, 30%)
    
  h2
    font-size 22px
    color main-color

  h3
    font-size 20px
    margin-left 18px
    text-transform none

  .book
    border 1px solid main-color
    width 400px
    heigth 400px

  .splash
    border 1px solid main-color
    width 800px

.sidebar
  float left
  width 300px

  .widget

    /*
     * Note the lack of vendor
     * prefixes here. Nib will
     * add them for us
     */
    text-align center
    border-radius 1px
    border 1px solid #ccc
    margin-left 20px
    background-color widget-color
    /*box-shadow inset 0px 0px 0px 3px rgba(#fff, 0.8), 0px 3px 0px -2px rgba(#000, 0.1)*/

    h1
      font-family 'Roboto Condensed'
      font-size 24px
      margin 13px 10px 4px 4px
      padding-bottom 10px
      border-bottom 1px dotted #ddd
      border-radius 2px 2px 0px 0px
      margin-bottom 10px
      color #ffffff

    p
      font-family 'Roboto'
      font-size 16px
      padding 5px 10px
      margin-bottom 10px
      color #ffffff

p
  line-height 1.8

footer
  width 700px
  margin 50px auto
  border-top 2px dotted #ccc
  padding-top 5px
  font-size 15px